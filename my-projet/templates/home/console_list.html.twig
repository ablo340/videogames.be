{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
<div class="container pt60 pb60">
	<div class="text-center mb60">
		<h2>Liste des consoles</h2>
	</div>

	<div class="grid">
		<div class="grid-sizer col-md-4"></div>

		{% for console in consoles %}
		<div class="grid-item col-md-4">
			<div class="card grid-item-content">
				<div class="card-body">
				<img src="{{ console.image }}" alt="">
				<h3 class="card-title">Nom : {{ console.nom }}</h3>

				<p class="card-text">
					Fabricant : {{ console.fabricant }}
				</p>

				<p class="card-text">
					Prix : {{ console.prix }}
				</p>

				<p class="card-text">
					Date de Sortie : {{ console.dateDeSortie | date('d/m/Y')}}
				</p>

				<a href="{{ path('console_show', {'id': console.id}) }}" class="btn btn-primary">Voir plus</a>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}
